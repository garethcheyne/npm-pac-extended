{
  "name": "pac-extended",
  "version": "2.0.0",
  "description": "Simplified Power Platform CLI wrapper for easier deployments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pac-ext": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src/assets",
    ".env.example",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm test",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "power-platform",
    "pac",
    "dynamics365",
    "dataverse",
    "pcf",
    "plugin",
    "cli",
    "deployment",
    "audit",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garethcheyne/npm-pac-extended.git"
  },
  "bugs": {
    "url": "https://github.com/garethcheyne/npm-pac-extended/issues"
  },
  "homepage": "https://github.com/garethcheyne/npm-pac-extended#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@azure/msal-node": "^2.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
